<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kriti.tutorial.RegistrationFire">

    <TextView
        android:id="@+id/user_text_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="256dp"
        android:layout_marginStart="63dp"
        android:text="Registration"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="83dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/user_email_text"
        android:textSize="30dp"
        android:layout_marginTop="26dp" />

    <EditText
        android:id="@+id/user_pass_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginTop="40dp"
        android:hint="password"
        android:layout_below="@+id/user_email_text"
        android:layout_alignStart="@+id/user_email_text" />

    <EditText
        android:id="@+id/user_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/user_text_head"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp" />

    <Button
        android:id="@+id/registration_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="91dp"
        android:layout_below="@+id/user_pass_text"
        android:layout_alignEnd="@+id/back_login_text" />

    <TextView
        android:id="@+id/back_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/user_text_head"
        android:layout_below="@+id/registration_btn"
        android:layout_marginStart="59dp"
        android:layout_marginTop="58dp"
        android:text="go back to login"
        android:textSize="18dp" />
</RelativeLayout>
